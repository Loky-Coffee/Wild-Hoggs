# ============================================
# WILD HOGGS - SECURITY & CACHING HEADERS
# Cloudflare Pages Configuration
# ============================================

# Global Security Headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), microphone=(), payment=(), usb=()
  # unsafe-inline wird von Astro benoetigt (Inline-Scripts fuer ViewTransitions, Inline-Styles fuer CSS-in-JS)
  # Risiko gering: keine User-Inputs werden gerendert, alle Daten sind intern und Zod-validiert
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  # levelgeeks.org wurde entfernt - alle Bilder sind self-hosted
  Strict-Transport-Security: max-age=15552000; includeSubDomains; preload

# Static Assets - Cache 1 Jahr (immutable)
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

/favicon.svg
  Cache-Control: public, max-age=31536000, immutable

# Images - Cache 30 Tage
/images/*
  Cache-Control: public, max-age=2592000

# HTML Pages - Cache 1 Stunde mit Revalidation
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Root HTML - Cache 1 Stunde
/
  Cache-Control: public, max-age=3600, must-revalidate
