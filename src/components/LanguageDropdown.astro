  }

  .dropdown-toggle .arrow {
    font-size: 0.7rem;
    transition: transform 0.3s ease;
    margin-left: 0.25rem;
  }

  .dropdown-toggle[aria-expanded="true"] .arrow {
    transform: rotate(180deg);
