---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { loadTranslations } from '../i18n/index';
import LanguageDropdown from './LanguageDropdown.astro';
import ApocalypseTimeClock from './ApocalypseTimeClock';
import UserMenu from './auth/UserMenu';
import PresenceHeartbeat from './chat/PresenceHeartbeat';
import GlobalChatPoller from './chat/GlobalChatPoller';

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);

// Helper to generate paths: English without prefix, others with prefix
// Always include trailing slash to avoid 308 redirects from Cloudflare Pages
const getPath = (page: string) => {
  if (lang === 'en') {
    return page === 'home' ? '/' : `/${page}/`;
  }
  return page === 'home' ? `/${lang}/` : `/${lang}/${page}/`;
};

const routes = [
  { key: 'nav.home', path: getPath('home') },
  { key: 'nav.members', path: getPath('members') },
  { key: 'nav.tools', path: getPath('tools') },
  { key: 'nav.events', path: getPath('events') },
  { key: 'nav.codes', path: getPath('codes') },
  { key: 'nav.roses', path: getPath('roses') },
  { key: 'nav.heroes', path: getPath('heroes') },
  { key: 'nav.guides', path: getPath('guides') },
  { key: 'nav.community', path: getPath('community') },
  { key: 'nav.about', path: getPath('about') },
] as const;

// Normalize to trailing slash for comparison (keeps '/' as-is)
const rawPath = Astro.url.pathname;
const currentPath = rawPath === '/' ? '/' : (rawPath.endsWith('/') ? rawPath : rawPath + '/');
---

<nav class="navigation">
  <div class="nav-container">
    <div class="nav-brand">
      <a href={lang === 'en' ? '/' : `/${lang}`}>
        <span class="brand-text">Wild Hoggs</span>
      </a>
    </div>

    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <ul class="nav-links">
      {routes.map(({ key, path }) => (
        <li>
          <a
            href={path}
            class:list={['nav-link', { active: currentPath === path }]}
          >
            {t(key)}
            {key === 'nav.community' && (
              <span id="community-badge" class="nav-badge" style="display:none"></span>
            )}
          </a>
        </li>
      ))}
    </ul>

    <div class="nav-controls">
      <ApocalypseTimeClock client:idle />
      <UserMenu translationData={translationData} client:only="preact" />
      <PresenceHeartbeat client:only="preact" />
      <GlobalChatPoller client:only="preact" />
      <div class="lang-switcher">
        <LanguageDropdown />
      </div>
    </div>
  </div>
</nav>

<style>
  .navigation {
    background: rgba(26, 26, 26, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 2px solid rgba(255, 165, 0, 0.3);
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1000;
  }

  .nav-container {
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .nav-brand a {
    text-decoration: none;
    color: #ffa500;
    font-size: 1.5rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .nav-brand a:hover {
    color: #ff8c00;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: #ffa500;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    flex: 1;
    justify-content: center;
  }

  .nav-link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.75);
    font-size: 1rem;
    padding: 0.4rem 0.9rem;
    border-radius: 6px;
    transition: color 0.25s ease, background 0.25s ease, box-shadow 0.25s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #ffa500;
    background: rgba(255, 165, 0, 0.1);
  }

  .nav-link.active {
    color: #fff;
    background: rgba(255, 165, 0, 0.18);
    box-shadow: 0 0 0 1px rgba(255, 165, 0, 0.35), 0 2px 12px rgba(255, 165, 0, 0.15);
  }

  /* Notification dot on mobile hamburger toggle via ::after — avoids CSS conflict with .nav-toggle span */
  .nav-toggle {
    position: relative;
  }

  .nav-toggle[data-badge]::after {
    content: '';
    position: absolute;
    top: 5px;
    right: 5px;
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background: #e74c3c;
    pointer-events: none;
  }

  /* Notification badge on Community nav link */
  .nav-badge {
    position: absolute;
    top: 0px;
    right: 0px;
    min-width: 16px;
    height: 16px;
    padding: 0 4px;
    border-radius: 8px;
    background: #e74c3c;
    color: #fff;
    font-size: 10px;
    font-weight: 700;
    line-height: 16px;
    text-align: center;
    pointer-events: none;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }

  .nav-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .lang-switcher {
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .navigation {
      position: sticky;
      top: 0;
      width: 100%;
      z-index: 1000;
    }

    .nav-container {
      padding: 1rem;
      gap: 0.5rem;
      flex-wrap: nowrap;
      position: relative;
    }

    .nav-brand {
      flex: 1;
      order: 1;
    }

    .nav-controls {
      order: 2;
      gap: 0.5rem;
    }

    .nav-toggle {
      display: flex;
      order: 3;
    }

    .lang-switcher {
      margin-left: 0;
    }

    /* Uhr auf Mobile ausblenden — zu breit für kleine Screens */
    .nav-controls :global(.apocalypse-clock) {
      display: none;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      width: 100%;
      flex-direction: column;
      gap: 0;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-in-out;
      background: rgba(26, 26, 26, 0.98);
      margin: 0;
      padding: 0;
      border-top: 2px solid rgba(255, 165, 0, 0.3);
    }

    .nav-links.open {
      max-height: 600px;
      overflow-y: auto;
    }

    .nav-links li {
      width: 100%;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      display: block;
      width: 100%;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid rgba(255, 165, 0, 0.15);
      border-radius: 0;
      text-align: left;
      box-sizing: border-box;
      box-shadow: none;
    }

    .nav-link.active {
      background: rgba(255, 165, 0, 0.12);
      border-left: 3px solid #ffa500;
      padding-left: calc(1.5rem - 3px);
      box-shadow: none;
    }
  }
</style>

<script>
  const navClickHandlers = new WeakMap<Element, EventListener>();
  const navOutsideHandlers = new WeakMap<Element, EventListener>();
  const navLinkHandlers = new WeakMap<Element, EventListener>();

  function setupNavToggle() {
    const toggle = document.querySelector('.nav-toggle');
    const navLinks = document.querySelector('.nav-links');

    if (!toggle || !navLinks) return;

    // Remove old listener if exists (prevent duplicates)
    const oldHandler = navClickHandlers.get(toggle);
    if (oldHandler) {
      toggle.removeEventListener('click', oldHandler);
    }

    // Create new click handler
    const clickHandler = () => {
      const isOpen = navLinks.classList.toggle('open');
      toggle.setAttribute('aria-expanded', String(isOpen));
    };

    // Store handler reference for cleanup
    navClickHandlers.set(toggle, clickHandler);

    // Add new listener
    toggle.addEventListener('click', clickHandler);

    // Shared close helper
    const closeMenu = () => {
      navLinks.classList.remove('open');
      toggle.setAttribute('aria-expanded', 'false');
    };

    // Close menu when clicking a nav link
    document.querySelectorAll('.nav-link').forEach(link => {
      const oldLinkHandler = navLinkHandlers.get(link);
      if (oldLinkHandler) {
        link.removeEventListener('click', oldLinkHandler);
      }
      link.addEventListener('click', closeMenu);
      navLinkHandlers.set(link, closeMenu as EventListener);
    });

    // Close menu when clicking outside
    const closeMenuOnClickOutside = (e: MouseEvent) => {
      const target = e.target as HTMLElement;
      if (!navLinks.classList.contains('open')) return;
      if (!navLinks.contains(target) && !toggle.contains(target)) {
        closeMenu();
      }
    };

    // Remove old click-outside listener if exists
    const oldOutsideHandler = navOutsideHandlers.get(toggle);
    if (oldOutsideHandler) {
      document.removeEventListener('click', oldOutsideHandler);
    }

    // Store handler reference for cleanup
    navOutsideHandlers.set(toggle, closeMenuOnClickOutside as EventListener);

    // Add click-outside listener
    document.addEventListener('click', closeMenuOnClickOutside);
  }

  // Run on initial page load (once: true — DOMContentLoaded fires only once anyway)
  document.addEventListener('DOMContentLoaded', setupNavToggle, { once: true });

  // Run on every View Transition navigation
  document.addEventListener('astro:page-load', setupNavToggle);
</script>
