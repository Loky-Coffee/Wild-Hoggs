---
import { languages } from '../i18n/ui';

const currentPath = Astro.url.pathname;
// Detect current language: /de -> 'de', everything else (/, /en) -> 'en'
const currentLang = currentPath.startsWith('/de') ? 'de' : 'en';
---

<div class="language-switcher">
  {Object.entries(languages).map(([lang, label]) => {
    // Simple direct links to language routes
    const href = lang === 'en' ? '/en' : '/de';

    return (
      <a
        href={href}
        class:list={['lang-link', { active: currentLang === lang }]}
      >
        {label}
      </a>
    );
  })}
</div>

<style>
  .language-switcher {
    position: fixed;
    top: 2rem;
    right: 2rem;
    display: flex;
    gap: 1rem;
    z-index: 1000;
  }

  .lang-link {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    color: #ffa500;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .lang-link:hover {
    background: rgba(255, 165, 0, 0.2);
    border-color: rgba(255, 165, 0, 0.6);
    transform: translateY(-2px);
  }

  .lang-link.active {
    background: rgba(255, 165, 0, 0.3);
    border-color: #ffa500;
  }

  @media (max-width: 768px) {
    .language-switcher {
      top: 1rem;
      right: 1rem;
    }

    .lang-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }
  }
</style>
