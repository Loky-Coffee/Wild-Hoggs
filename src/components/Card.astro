---
interface Props {
  href?: string;
  variant?: 'default' | 'tool' | 'event' | 'member';
  class?: string;
}

const { href, variant = 'default', class: className = '' } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag href={href} class:list={['card', `card-${variant}`, className]}>
  <slot />
</Tag>

<style>
  .card {
    background: var(--color-bg-card);
    border: var(--border-width) solid var(--color-primary-alpha-20);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    color: var(--color-text);
    display: block;
  }

  a.card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-primary-alpha-40);
    transform: translateY(-4px);
    box-shadow: var(--shadow-primary);
  }

  /* Tool Card Variant */
  .card-tool {
    position: relative;
  }

  .card-tool:hover {
    border-color: var(--color-primary-alpha-50);
  }

  /* Event Card Variant */
  .card-event {
    border-color: var(--color-success-alpha-30);
  }

  .card-event:hover {
    border-color: var(--color-success-alpha-50);
    box-shadow: var(--shadow-success);
  }

  /* Member Card Variant */
  .card-member {
    text-align: center;
    padding: var(--space-md);
  }

  @media (max-width: 768px) {
    .card {
      padding: var(--space-md);
    }
  }
</style>
