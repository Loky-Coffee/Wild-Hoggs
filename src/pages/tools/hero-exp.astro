---
import PageLayout from '../../layouts/PageLayout.astro';
import { useTranslations } from '../../i18n/utils';
import HeroExpCalculator from '../../components/calculators/HeroExpCalculator';

const t = useTranslations('de');
---

<PageLayout title={`${t('tools.hero.title')} - Wild Hoggs`} description={t('tools.hero.description')}>
  <div class="page-header">
    <h1>{t('tools.hero.title')}</h1>
    <p class="subtitle">{t('tools.hero.description')}</p>
  </div>

  <HeroExpCalculator lang="de" client:load />
</PageLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #ffa500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
