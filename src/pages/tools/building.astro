---
import PageLayout from '../../layouts/PageLayout.astro';
import { useTranslations } from '../../i18n/utils';
import BuildingCalculator from '../../components/calculators/BuildingCalculator';

const t = useTranslations('de');
---

<PageLayout title={`${t('tools.building.title')} - Wild Hoggs`} description={t('tools.building.description')}>
  <div class="page-header">
    <h1>{t('tools.building.title')}</h1>
    <p class="subtitle">{t('tools.building.description')}</p>
  </div>

  <BuildingCalculator lang="de" client:load />
</PageLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #ffa500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }
</style>
