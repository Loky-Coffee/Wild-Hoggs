---
import PageLayout from '../layouts/PageLayout.astro';
import { useTranslations } from '../i18n/utils';

const t = useTranslations('de');
---

<PageLayout title={`${t('guides.title')} - Wild Hoggs`} description="Helpful guides and tutorials">
  <div class="page-header">
    <h1>{t('guides.title')}</h1>
    <p class="subtitle">Hilfreiche Anleitungen f√ºr Last-Z</p>
  </div>

  <div class="content-placeholder">
    <p>Guides werden in Phase 6 implementiert...</p>
  </div>
</PageLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #ffa500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .content-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }
</style>
