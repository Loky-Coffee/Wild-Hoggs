---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import PageHeader from '../../components/PageHeader.astro';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout title={`${t('tools.title')} - Wild Hoggs`} description="Calculator tools for Last-Z">
  <div class="page-header">
    <h1>{t('tools.title')}</h1>
    <p class="subtitle">
      {t('tools.subtitle')}
    </p>
  </div>

  <div class="tools-grid">
    <a href={`/${lang}/tools/hero-exp`} class="tool-card">
      <h2>{t('tools.hero.title')}</h2>
      <p>{t('tools.hero.description')}</p>
      <span class="available">{t('tools.available')}</span>
    </a>

    <a href={`/${lang}/tools/building`} class="tool-card">
      <h2>{t('tools.building.title')}</h2>
      <p>{t('tools.building.description')}</p>
      <span class="available">{t('tools.available')}</span>
    </a>

    <a href={`/${lang}/tools/research`} class="tool-card">
      <h2>{t('tools.research.title')}</h2>
      <p>{t('tools.research.description')}</p>
      <span class="available">{t('tools.available')}</span>
    </a>
  </div>
</PageLayout>

<style>
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .tool-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    text-decoration: none;
    display: block;
  }

  .tool-card:hover {
    border-color: rgba(255, 165, 0, 0.5);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(255, 165, 0, 0.2);
  }

  .tool-card.disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .tool-card.disabled:hover {
    border-color: rgba(255, 165, 0, 0.2);
    transform: none;
    box-shadow: none;
  }

  .tool-card h2 {
    color: #ffa500;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .tool-card p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .available {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: rgba(39, 174, 96, 0.2);
    color: #52be80;
    border: 1px solid rgba(39, 174, 96, 0.3);
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .coming-soon {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: rgba(128, 128, 128, 0.2);
    color: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(128, 128, 128, 0.3);
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
