---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import { loadTranslations } from '../../i18n/index';
import PageHeader from '../../components/PageHeader.astro';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('', lang) },
  { label: t('nav.tools') }
];
---

<PageLayout
  title={t('seo.tools.title')}
  description={t('seo.tools.description')}
  breadcrumbs={breadcrumbItems}
>
  <div class="page-header">
    <h1>{t('seo.tools.h1')}</h1>
    <p class="subtitle">
      {t('tools.subtitle')}
    </p>
  </div>

  <div class="tools-grid">
    <a href={getLocalizedPath('tools/hero-exp', lang)} class="tool-card has-image" style="background-image: url('/images/hero.webp')" aria-label={t('tools.hero.title')}>
      <div class="tool-card-body">
        <h2>{t('tools.hero.title')}</h2>
        <p>{t('tools.hero.description')}</p>
        <span class="available">{t('tools.available')}</span>
      </div>
    </a>

    <a href={getLocalizedPath('tools/building', lang)} class="tool-card has-image" style="background-image: url('/images/hq.webp')" aria-label={t('tools.building.title')}>
      <div class="tool-card-body">
        <h2>{t('tools.building.title')}</h2>
        <p>{t('tools.building.description')}</p>
        <span class="available">{t('tools.available')}</span>
      </div>
    </a>

    <a href={getLocalizedPath('tools/tank', lang)} class="tool-card has-image" style="background-image: url('/images/garage.webp')" aria-label={t('tools.tank.title')}>
      <div class="tool-card-body">
        <h2>{t('tools.tank.title')}</h2>
        <p>{t('tools.tank.description')}</p>
        <span class="available">{t('tools.available')}</span>
      </div>
    </a>

    <a href={getLocalizedPath('tools/research', lang)} class="tool-card has-image" style="background-image: url('/images/lab.webp')" aria-label={t('tools.research.title')}>
      <div class="tool-card-body">
        <h2>{t('tools.research.title')}</h2>
        <p>{t('tools.research.description')}</p>
        <span class="available">{t('tools.available')}</span>
      </div>
    </a>

    <a href={getLocalizedPath('tools/caravan', lang)} class="tool-card has-image" style="background-image: url('/images/caravan.webp')" aria-label={t('tools.caravan.title')}>
      <div class="tool-card-body">
        <h2>{t('tools.caravan.title')}</h2>
        <p>{t('tools.caravan.description')}</p>
        <span class="available">{t('tools.available')}</span>
      </div>
    </a>
  </div>
</PageLayout>

<style>
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-auto-rows: 1fr;
    gap: 2rem;
  }

  .tool-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    min-height: 240px;
  }

  .tool-card.has-image {
    background-size: cover;
    background-position: center;
  }

  .tool-card.has-image::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 75% 65% at 50% 38%, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%),
      linear-gradient(to bottom, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.78) 62%);
    border-radius: 8px;
  }

  .tool-card-body {
    padding: 2rem;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .tool-card-body h2 {
    margin-bottom: 0;
  }

  .tool-card-body p {
    flex: 1;
    display: flex;
    align-items: center;
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  .tool-card:hover {
    border-color: rgba(255, 165, 0, 0.5);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(255, 165, 0, 0.2);
  }

  .tool-card:focus-visible {
    outline: 2px solid #ffa500;
    outline-offset: 3px;
    border-color: rgba(255, 165, 0, 0.5);
  }

  .tool-card.disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .tool-card.disabled:hover {
    border-color: rgba(255, 165, 0, 0.2);
    transform: none;
    box-shadow: none;
  }

  .tool-card h2 {
    color: #ffa500;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .tool-card p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .available {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: rgba(39, 174, 96, 0.2);
    color: #52be80;
    border: 1px solid rgba(39, 174, 96, 0.3);
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .coming-soon {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: rgba(128, 128, 128, 0.2);
    color: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(128, 128, 128, 0.3);
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
