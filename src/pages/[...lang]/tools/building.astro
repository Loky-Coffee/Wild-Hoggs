---
import PageLayout from '../../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';
import BuildingCalculator from '../../../components/calculators/BuildingCalculator';
import '../../../styles/shared-layouts.css';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout title={`${t('tools.building.title')} - Wild Hoggs`} description={t('tools.building.description')}>
  <div class="page-header">
    <h1>{t('tools.building.title')}</h1>
    <p class="subtitle">{t('tools.building.description')}</p>
  </div>

  <BuildingCalculator lang={lang} client:load />
</PageLayout>

