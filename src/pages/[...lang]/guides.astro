---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations, getCurrentYear, getLocalizedPath } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import { loadTranslations } from '../../i18n/index';
import PageHeader from '../../components/PageHeader.astro';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);
const currentYear = getCurrentYear();

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('', lang) },
  { label: t('nav.guides') }
];
---

<PageLayout
  title={t('seo.guides.title', { year: currentYear })}
  description={t('seo.guides.description')}
  robots="noindex"
  breadcrumbs={breadcrumbItems}
>
  <div class="page-header">
    <h1>{t('seo.guides.h1', { year: currentYear })}</h1>
    <p class="subtitle">
      {t('guides.subtitle')}
    </p>
  </div>

  <div class="content-placeholder">
    <p>
      {t('guides.placeholder')}
    </p>
  </div>
</PageLayout>

<style>
  .content-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
