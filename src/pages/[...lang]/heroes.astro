---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import { loadTranslations } from '../../i18n/index';
import PageHeader from '../../components/PageHeader.astro';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('', lang) },
  { label: t('nav.heroes') }
];
---

<PageLayout
  title={t('seo.heroes.title')}
  description={t('seo.heroes.description')}
  robots="noindex, nofollow"
  breadcrumbs={breadcrumbItems}
>
  <div class="page-header">
    <h1>{t('seo.heroes.h1')}</h1>
    <p class="subtitle">
      {t('heroes.subtitle')}
    </p>
  </div>

  <div class="content-placeholder">
    <p>
      {t('heroes.placeholder')}
    </p>
  </div>
</PageLayout>

<style>
  .content-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }
</style>
