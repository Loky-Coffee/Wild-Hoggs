---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import { loadTranslations } from '../../i18n/index';
import PageHeader from '../../components/PageHeader.astro';
import HeroInfoShowcase from '../../components/HeroInfoShowcase';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('', lang) },
  { label: t('nav.heroes') }
];
---

<PageLayout
  title={t('seo.heroes.title')}
  description={t('seo.heroes.description')}
  breadcrumbs={breadcrumbItems}
>
  <PageHeader
    title="Info-Anzeige Vergleich"
    subtitle="Klick auf eine Karte â€” 9 verschiedene Arten wie die Hero-Info erscheint"
  />

  <HeroInfoShowcase client:visible />
</PageLayout>
