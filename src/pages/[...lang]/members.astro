---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import { loadTranslations } from '../../i18n/index';
import PageHeader from '../../components/PageHeader.astro';
import { members } from '../../data/members';
import MembersList from '../../components/MembersList';
import { statSync } from 'fs';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const translationData = await loadTranslations(lang);
const t = useTranslations(translationData);

// Get last modification time of members.ts
const __dirname = dirname(fileURLToPath(import.meta.url));
const membersFilePath = join(__dirname, '../../data/members.ts');

const monthNames = [
  t('members.month.jan'),
  t('members.month.feb'),
  t('members.month.mar'),
  t('members.month.apr'),
  t('members.month.may'),
  t('members.month.jun'),
  t('members.month.jul'),
  t('members.month.aug'),
  t('members.month.sep'),
  t('members.month.oct'),
  t('members.month.nov'),
  t('members.month.dec'),
];

let lastUpdated = '';
try {
  const stats = statSync(membersFilePath);
  const date = new Date(stats.mtime);
  const day = date.getDate();
  const monthName = monthNames[date.getMonth()];
  const year = date.getFullYear();
  const hours = date.getHours().toString().padStart(2, '0');
  const minutes = date.getMinutes().toString().padStart(2, '0');

  // Format: "4. Feb 2026, 18:16" for DE, "Feb 4, 2026, 18:16" for EN
  if (lang === 'de') {
    lastUpdated = `${day}. ${monthName} ${year}, ${hours}:${minutes}`;
  } else {
    lastUpdated = `${monthName} ${day}, ${year}, ${hours}:${minutes}`;
  }
} catch {
  const date = new Date();
  const day = date.getDate();
  const monthName = monthNames[date.getMonth()];
  const year = date.getFullYear();
  const hours = date.getHours().toString().padStart(2, '0');
  const minutes = date.getMinutes().toString().padStart(2, '0');
  lastUpdated = lang === 'de' ? `${day}. ${monthName} ${year}, ${hours}:${minutes}` : `${monthName} ${day}, ${year}, ${hours}:${minutes}`;
}

const lastUpdatedText = t('members.lastUpdated');

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('', lang) },
  { label: t('nav.members') }
];
---

<PageLayout
  image="/og-members.webp"
  imageAlt={t('nav.members')}
  title={t('seo.members.title')}
  description={t('seo.members.description')}
  breadcrumbs={breadcrumbItems}
>
  <PageHeader
    title={t('members.title')}
    subtitle={`${t('members.count').replace('{count}', members.length.toString())} • ${lastUpdatedText}: ${lastUpdated}`}
  />

  <MembersList members={members} lang={lang} translationData={translationData} client:visible />
</PageLayout>

<style>

  /* ── Level Stats Panel ── */
  :global(.level-stats-panel) {
    background: rgba(255, 165, 0, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.18);
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  /* avg level – centred stat */
  :global(.avg-level-box) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.15rem;
  }

  :global(.avg-label) {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.6);
  }

  :global(.avg-value) {
    font-size: 2.8rem;
    font-weight: 800;
    color: #ffa500;
    line-height: 1;
  }

  /* filter + sort section */
  :global(.level-filter-section) {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.07);
    padding-top: 1.1rem;
  }

  :global(.level-filter-label) {
    font-size: 0.68rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.6);
  }

  /* pill chips */
  :global(.level-chips) {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
    justify-content: center;
  }

  /* hide native checkbox but keep it accessible */
  :global(.level-checkbox-hidden) {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
    pointer-events: none;
  }

  :global(.level-chip) {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    cursor: pointer;
    padding: 0.38rem 0.85rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 165, 0, 0.45);
    background: rgba(255, 165, 0, 0.1);
    transition: all 0.15s ease;
    user-select: none;
  }

  :global(.level-chip:hover) {
    background: rgba(255, 165, 0, 0.2);
    border-color: rgba(255, 165, 0, 0.7);
  }

  :global(.level-chip.off) {
    opacity: 0.3;
    border-color: rgba(255, 255, 255, 0.1);
    background: transparent;
  }

  :global(.chip-level) {
    font-size: 0.82rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    white-space: nowrap;
  }

  :global(.chip-count) {
    font-size: 0.76rem;
    font-weight: 700;
    color: #ffa500;
    background: rgba(255, 165, 0, 0.15);
    border-radius: 999px;
    padding: 0 0.38rem;
    min-width: 2.2em;
    text-align: center;
    line-height: 1.5;
  }

  /* sort row inside the panel */
  :global(.members-sort-row) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
    padding-top: 0.85rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    width: 100%;
  }

  :global(.sort-row-label) {
    font-size: 0.68rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.6);
  }

  :global(.sort-chips) {
    display: flex;
    gap: 0.45rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  :global(.sort-chip) {
    padding: 0.38rem 0.9rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: transparent;
    color: rgba(255, 255, 255, 0.45);
    font-size: 0.82rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
    white-space: nowrap;
  }

  :global(.sort-chip:hover) {
    border-color: rgba(255, 165, 0, 0.5);
    color: rgba(255, 165, 0, 0.8);
    background: rgba(255, 165, 0, 0.07);
  }

  :global(.sort-chip.active) {
    border-color: rgba(255, 165, 0, 0.8);
    background: rgba(255, 165, 0, 0.15);
    color: #ffa500;
    font-weight: 700;
  }

  :global(.visible-count) {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 500;
  }

  :global(.members-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  :global(.member-card) {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    position: relative;
  }

  :global(.member-card:hover) {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(255, 165, 0, 0.2);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 165, 0, 0.4);
  }

  :global(.member-gender) {
    font-size: 2.5rem;
    line-height: 1;
  }

  :global(.member-name) {
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    text-align: center;
    word-break: break-word;
    min-height: 2.5em;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.member-level) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 165, 0, 0.1);
    border-radius: 20px;
    border: 1px solid rgba(255, 165, 0, 0.3);
  }

  :global(.level-label) {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.level-value) {
    font-size: 1.2rem;
    font-weight: 700;
    color: #ffa500;
  }

  /* ── Desktop: 2-column layout ── */
  @media (min-width: 769px) {
    :global(astro-island) {
      display: block;
      width: 100%;
    }

    :global(.members-layout) {
      display: grid;
      grid-template-columns: 320px 1fr;
      gap: 1.75rem;
      align-items: start;
    }

    :global(.level-stats-panel) {
      position: sticky;
      top: 1rem;
      margin-bottom: 0;
    }

    :global(.level-chips) {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    :global(.level-chip) {
      border-radius: 8px;
      justify-content: center;
    }

    :global(.sort-chips) {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    :global(.sort-chip) {
      border-radius: 8px;
    }

    :global(.members-grid) {
      grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));
    }
  }

  /* ── Mobile ── */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    :global(.level-stats-panel) {
      padding: 1.1rem 1rem;
      gap: 1rem;
    }

    :global(.avg-value) {
      font-size: 2.2rem;
    }

    :global(.level-chip) {
      padding: 0.32rem 0.7rem;
    }

    :global(.chip-level) {
      font-size: 0.78rem;
    }

    :global(.members-grid) {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }

    :global(.member-card) {
      padding: 1.25rem 1rem;
    }

    :global(.member-gender) {
      font-size: 2rem;
    }

    :global(.member-name) {
      font-size: 0.9rem;
    }
  }
</style>
