---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import PageHeader from '../../components/PageHeader.astro';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout
  title={t('seo.events.title')}
  description={t('seo.events.description')}
  robots="noindex, nofollow"
>
  <div class="page-header">
    <h1>{t('seo.events.h1')}</h1>
    <p class="subtitle">
      {t('events.subtitle')}
    </p>
  </div>

  <div class="content-placeholder">
    <p>
      {t('events.placeholder')}
    </p>
  </div>
</PageLayout>

<style>
  .content-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
