---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout title={`${t('events.title')} - Wild Hoggs`} description="Guild events and activities">
  <div class="page-header">
    <h1>{t('events.title')}</h1>
    <p class="subtitle">
      {lang === 'de' ? 'Koordiniere dich mit der Gilde' : 'Coordinate with the guild'}
    </p>
  </div>

  <div class="content-placeholder">
    <p>
      {lang === 'de'
        ? 'Event-Kalender wird in Phase 4 implementiert...'
        : 'Event calendar will be implemented in Phase 4...'}
    </p>
  </div>
</PageLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #ffa500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .content-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(255, 165, 0, 0.3);
    border-radius: 8px;
    padding: 3rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
