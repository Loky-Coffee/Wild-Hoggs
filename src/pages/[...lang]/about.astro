---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout title={`${t('about.title')} - Wild Hoggs`} description={t('about.who.text')}>
  <div class="page-header">
    <h1>{t('about.title')}</h1>
    <p class="subtitle">Wild Hoggs - Server 395</p>
  </div>

  <div class="content-container">
    <section class="about-section">
      <div class="section-icon">üè∞</div>
      <h2>{t('about.who.title')}</h2>
      <p>{t('about.who.text')}</p>
    </section>

    <section class="about-section">
      <div class="section-icon">üéØ</div>
      <h2>{t('about.mission.title')}</h2>
      <p>{t('about.mission.text')}</p>
    </section>

    <section class="values-section">
      <h2>{t('about.values.title')}</h2>
      <div class="values-grid">
        <div class="value-card">
          <div class="value-icon">ü§ù</div>
          <h3>{t('about.values.teamwork')}</h3>
          <p>{t('about.values.teamwork.text')}</p>
        </div>
        <div class="value-card">
          <div class="value-icon">‚≠ê</div>
          <h3>{t('about.values.respect')}</h3>
          <p>{t('about.values.respect.text')}</p>
        </div>
        <div class="value-card">
          <div class="value-icon">üìà</div>
          <h3>{t('about.values.growth')}</h3>
          <p>{t('about.values.growth.text')}</p>
        </div>
      </div>
    </section>

    <section class="info-section">
      <div class="info-grid">
        <div class="info-card">
          <span class="info-label">{t('info.game')}</span>
          <span class="info-value">Last-Z</span>
        </div>
        <div class="info-card">
          <span class="info-label">{t('info.server')}</span>
          <span class="info-value">395</span>
        </div>
        <div class="info-card">
          <span class="info-label">{t('info.status')}</span>
          <span class="info-value">{t('info.status.active')}</span>
        </div>
      </div>
    </section>
  </div>
</PageLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #ffa500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .content-container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .about-section {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
  }

  .section-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .about-section h2 {
    color: #ffa500;
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .about-section p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .values-section {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 12px;
    padding: 2rem;
  }

  .values-section h2 {
    color: #ffa500;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .value-card {
    background: rgba(255, 165, 0, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    border-color: rgba(255, 165, 0, 0.5);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(255, 165, 0, 0.2);
  }

  .value-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .value-card h3 {
    color: #ffa500;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .value-card p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .info-section {
    margin: 1rem 0;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .info-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .info-label {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .info-value {
    color: #ffa500;
    font-size: 1.5rem;
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .values-grid {
      grid-template-columns: 1fr;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 2rem;
    }

    .about-section h2,
    .values-section h2 {
      font-size: 1.5rem;
    }
  }
</style>
