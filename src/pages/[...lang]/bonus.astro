import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import RewardCodes from '../../components/RewardCodes';
import WeeklyRoses from '../../components/WeeklyRoses';
import { ACTIVE_LUCKY_NUMBER } from '../../config/bonus';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Fetch codes from levelgeeks.org at build time
const response = await fetch('https://levelgeeks.org/last-z-survival-shooter-codes/');
const html = await response.text();

// Extract codes from wp-block-list class
const codes = [];

// Find all wp-block-list sections
const listMatches = html.matchAll(/<ul class="wp-block-list">(.*?)<\/ul>/gs);

for (const listMatch of listMatches) {
  const listContent = listMatch[1];

  // Extract all <li> items
  const liMatches = listContent.matchAll(/<li>(.*?)<\/li>/gs);

  for (const liMatch of liMatches) {
    let content = liMatch[1];

    // Remove HTML tags
    content = content.replace(/<[^>]+>/g, '');

    // Decode HTML entities
    content = content.replace(/&nbsp;/g, ' ')
                     .replace(/&amp;/g, '&')
                     .replace(/&lt;/g, '<')
                     .replace(/&gt;/g, '>')
                     .replace(/&#8211;/g, '‚Äì')
                     .replace(/&#8220;/g, '"')
                     .replace(/&#8221;/g, '"');

    // Parse code line: "CODE ‚Äì description"
    const codeMatch = content.match(/^([A-Z0-9]+)\s*[‚Äì\-]\s*(.+)$/);

    if (codeMatch) {
      const code = codeMatch[1].trim();
      const description = codeMatch[2].trim();

      // Check if it mentions expiry/validity
      const validMatch = description.match(/Valid\s+(?:until|till)\s+([^)]+)/i);
      const isExpired = description.toLowerCase().includes('expired');

      codes.push({
        code: code,
        description: description,
        validUntil: validMatch ? validMatch[1].trim() : null,
        isActive: !isExpired
      });
    }
  }
}

