---
import PageLayout from '../../layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getLanguagePaths } from '../../i18n/static-paths';
import RewardCodes from '../../components/RewardCodes';
import WeeklyRoses from '../../components/WeeklyRoses';
import { ACTIVE_LUCKY_NUMBER } from '../../config/bonus';
import '../../styles/shared-layouts.css';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Alle 10 Lucky Rose Buffs
// Die aktive Rose wird in src/config/bonus.ts eingestellt
const allRoses = [
  {
    luckyNumber: 1,
    name: t('bonus.rose1.name'),
    buff: t('bonus.rose1.buff'),
    duration: '2h',
    description: t('bonus.rose1.description'),
  },
  {
    luckyNumber: 2,
    name: t('bonus.rose2.name'),
    buff: t('bonus.rose2.buff'),
    duration: '24h',
    description: t('bonus.rose2.description'),
  },
  {
    luckyNumber: 3,
    name: t('bonus.rose3.name'),
    buff: t('bonus.rose3.buff'),
    duration: '24h',
    description: t('bonus.rose3.description'),
  },
  {
    luckyNumber: 4,
    name: t('bonus.rose4.name'),
    buff: t('bonus.rose4.buff'),
    duration: '24h',
    description: t('bonus.rose4.description'),
  },
  {
    luckyNumber: 5,
    name: t('bonus.rose5.name'),
    buff: t('bonus.rose5.buff'),
    duration: '2h',
    description: t('bonus.rose5.description'),
  },
  {
    luckyNumber: 6,
    name: t('bonus.rose6.name'),
    buff: t('bonus.rose6.buff'),
    duration: '24h',
    description: t('bonus.rose6.description'),
  },
  {
    luckyNumber: 7,
    name: t('bonus.rose7.name'),
    buff: t('bonus.rose7.buff'),
    duration: '2h',
    description: t('bonus.rose7.description'),
  },
  {
    luckyNumber: 8,
    name: t('bonus.rose8.name'),
    buff: t('bonus.rose8.buff'),
    duration: '2h',
    description: t('bonus.rose8.description'),
  },
  {
    luckyNumber: 9,
    name: t('bonus.rose9.name'),
    buff: t('bonus.rose9.buff'),
    duration: '2h',
    description: t('bonus.rose9.description'),
  },
  {
    luckyNumber: 10,
    name: t('bonus.rose10.name'),
    buff: t('bonus.rose10.buff'),
    duration: '2h',
    description: t('bonus.rose10.description'),
  },
];

// Markiere die aktive Rose
const roses = allRoses.map(rose => ({
  ...rose,
  isActive: rose.luckyNumber === ACTIVE_LUCKY_NUMBER
}));
// ============================================
---

<PageLayout title={`${t('bonus.title')} - Wild Hoggs`} description={t('bonus.codes.description')}>
  <div class="page-header">
    <h1>{t('bonus.title')}</h1>
    <p class="subtitle">{t('bonus.codes.description')}</p>
  </div>

  <div class="bonus-container">
    <!-- Reward Codes Section -->
    <section class="bonus-section">
      <div class="section-header">
        <h2>üéÅ {t('bonus.codes.title')}</h2>
      </div>

      <div class="howto-card">
        <h3>{t('bonus.codes.howto')}</h3>
        <p>{t('bonus.codes.howto.text')}</p>
        <a href="https://last-z.com/giftCenter/#/login" target="_blank" rel="noopener noreferrer" class="redemption-link">
          Gift Center ‚Üí
        </a>
      </div>

      <RewardCodes lang={lang} client:load />
    </section>

    <!-- Weekly Roses Section -->
    <section class="bonus-section">
      <div class="section-header">
        <h2>üåπ {t('bonus.roses.title')}</h2>
      </div>

      <WeeklyRoses lang={lang} roses={roses} client:load />
    </section>
  </div>
</PageLayout>

<style>
  .bonus-container {
    max-width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 0 2rem;
  }

  .bonus-section {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 12px;
    padding: 2rem;
  }

  .section-header {
    margin-bottom: 1.5rem;
  }

  .section-header h2 {
    color: #ffa500;
    font-size: 2rem;
    margin: 0;
  }

  .howto-card {
    background: rgba(255, 165, 0, 0.05);
    border: 1px solid rgba(255, 165, 0, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .howto-card h3 {
    color: #ffa500;
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  .howto-card p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .redemption-link {
    display: inline-block;
    color: #52be80;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 1rem;
    background: rgba(39, 174, 96, 0.1);
    border: 1px solid rgba(39, 174, 96, 0.3);
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .redemption-link:hover {
    background: rgba(39, 174, 96, 0.2);
    border-color: rgba(39, 174, 96, 0.5);
    transform: translateX(4px);
  }

  .coming-soon-card {
    background: rgba(128, 128, 128, 0.1);
    border: 1px solid rgba(128, 128, 128, 0.2);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
  }

  .coming-soon-card p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
    }

    .bonus-section {
      padding: 1.5rem;
    }
  }
</style>
</PageLayout>
